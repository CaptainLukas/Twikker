@using Microsoft.AspNetCore.Mvc.Localization;
@using Forsthuber.Data.Data;
@using Microsoft.AspNetCore.Identity;
@using Forsthuber.Data.Entities;
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Twikker";
    ApplicationUser user = (ApplicationUser)ViewData["User"];
    List<ApplicationUser> users = (List<ApplicationUser>)ViewData["Users"];

    List<Message> messages = (List<Message>)ViewData["Messages"];

    messages = messages.OrderByDescending(x => x.TimeStamp).ToList();

    List<Comment> comments = new List<Comment>();
}

<!-- import style sheets here -->
<link rel="stylesheet" href="~/css/index.css" />

<!-- Prepares a grid that looks like: 
    
    -------------------------
    |  |   random info   |  | 
    |  |-----------------|  |
    |  |      text-      |  |
    |  |    messages     |  |
    |  |                 |  |
    |  |-----------------|  |    
    |  |load more button |  |
    -------------------------   
    
 -->

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            
            <div class="headline">                

                <p>@Localizer["Username"]: <strong data-bind="text: userName"></strong></p>

            </div>            

            <div class="content"> <p>Likes: <data-bind></p>
                @if (this.User.Identity.IsAuthenticated)
                {
                    <textarea maxlength="300" name="newMessageText" id="newMessageText"></textarea>
                    <button class="btn-success" onclick="newMessage('newMessageText')">@Localizer["Post"]</button>

                    for (int i = 0; i < messages.Count; i++)
                    {
                        <p>@messages[i].User</p>
                        <p>@messages[i].Text</p>
                        <p id="@("likeCount" + i) ">@messages[i].Likes.Count</p>
                        if(messages[i].User.UserName == user.UserName)
                        {
                            <button class="btn-default" onclick="">@Localizer["Delete"]</button>
                        }

                        <button class="like-button" onclick="like(@messages[i].MessageID, @i)">@Localizer["Like"]</button>
                        <p>@Localizer["Comments"]</p>

                        comments = messages[i].Comments.OrderByDescending(x => x.TimeStamp).ToList();

                        for (int j = 0; j < comments.Count; j++)
                        {
                            <p>@comments[i].User</p>
                            <p>@comments[i].Text</p>
                            if (comments[i].User.UserName == user.UserName)
                            {
                                <button class="btn-default" onclick="delete()">@Localizer["Delete"]</button>
                            }
                        }

                        <textarea maxlength="300" name="newCommentText" id="@("newCommentText" + i)"></textarea>
                        <button class="btn-default" onclick="newComment(@messages[i].MessageID, @i)">@Localizer["Comment"]</button>
                    }
                }
</div>
            <div class="bottomline">
                <button class="btn-success" onclick="loadMore()">@Localizer["Load More"]</button>
            </div>
        </div>
        <div class="col-sm-1"></div>
    </div>
</div>

<!-- import scripts here -->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/knockout/dist/knockout.js"></script>
<script src="~/js/index.js" asp-append-version="true"></script>
